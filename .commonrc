export EDITOR=micro
export PATH=$PATH:$HOME/.cargo/bin:$HOME/bin:$HOME/miniconda/bin

#below settings stopped to avoid brew taking presedence.
#eval "$(/home/linuxbrew/.linuxbrew/bin/brew shellenv)"
#source /home/linuxbrew/.linuxbrew/opt/asdf/libexec/asdf.sh

#below env added manually to avoid brew preceeding in the path and its corresponding tools and alias
export PATH=$PATH:/home/linuxbrew/.linuxbrew/bin:/home/linuxbrew/.linuxbrew/sbin:/home/linuxbrew/.linuxbrew/opt/asdf/libexec/bin
export NVM_DIR="$HOME/.nvm"
[ -s "/home/linuxbrew/.linuxbrew/opt/nvm/nvm.sh" ] && . "/home/linuxbrew/.linuxbrew/opt/nvm/nvm.sh"
[ -s "/home/linuxbrew/.linuxbrew/bin/thefuck" ] && eval $(/home/linuxbrew/.linuxbrew/bin/thefuck --alias)
alias brewchown="sudo chown -R $(whoami) $(brew --prefix)/*"


if command -v theme.sh > /dev/null; then
	[ -e ~/.theme_history ] && theme.sh "$(theme.sh -l|tail -n1)"

	# Optional  

	alias th='theme.sh -i'

	# Interactively load a light theme
	alias thl='theme.sh --light -i'

	# Interactively load a dark theme
	alias thd='theme.sh --dark -i'
fi

